<p id="notice"><%= notice %></p>
<section class="articles-frontpage">
  <div class="frontpage">
    <%= link_to ' ', @main_article, class: 'click-image'%>
    <%= image_tag(@main_article.image, class:"article-image") %>
    <h3 class="text"><%= @main_article.title%></h3>
    <p class="text"><%= @main_article.text%></p>
  </div>
  <div class="articles-column">
    <div>
      <%= link_to ' ', @second_article, class: 'click-image'%>
      <%= image_tag(@second_article.image, class:"article-image") %>
      <h3><%= @second_article.title%></h3>
    </div>

    <div>
      <%= link_to ' ', @third_article, class: 'click-image'%>
      <%= image_tag(@third_article.image, class:"article-image") %>
      <h3><%= @third_article.title%></h3>
    </div>
  </div>
</section>
<section class="articles-row">
  <% @categories.each do |category| %>
    <div>
      <%= link_to ' ', category.articles.sort_by(&:created_at).last, class: 'click-image'%>
      <%= image_tag(category.articles.sort_by(&:created_at).last.image, class:"article-image") %>
      <h3><%= category.articles.sort_by(&:created_at).last.category.name%></h3>
      <p><%= category.articles.sort_by(&:created_at).last.title%></p>
    </div>
  <% end %>
</section>

<section class="articles-category">
  <div>
    <% @articles.limit(2).each do |article| %>
    <div>
      <%= image_tag(article.image, class:"article-image") %>
      <div class="category-article-content">
        <h3><%= article.category.name%></h3>
        <h2><%= article.title %></h2>
        <h2>Author: <%= article.author.name %></h2>
        <p><%= article.text %></p>
        <% if session[:current_user_id].is_a? Integer %>
          <% if article.votes.find_by(user_id: @user).present? %>
            <h3><%= link_to 'Dislike', unvote_path(user_id: @user, article_id: article), method: :put %></h3>
          <% else %>
            <h3><%= link_to 'Like', vote_path(user_id: @user, article_id: article), method: :put %></h3>
          <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div>
    <% @articles.limit(2).each do |article| %>
    <div>
      <div class="category-article-content">
        <h3><%= article.category.name%></h3>
        <h2><%= article.title %></h2>
        <h2>Author: <%= article.author.name %></h2>
        <p><%= article.text %></p>
        <% if session[:current_user_id].is_a? Integer %>
          <% if article.votes.find_by(user_id: @user).present? %>
            <h3><%= link_to 'Dislike', unvote_path(user_id: @user, article_id: article), method: :put %></h3>
          <% else %>
            <h3><%= link_to 'Like', vote_path(user_id: @user, article_id: article), method: :put %></h3>
          <% end %>
        <% end %>
      </div>
      <%= image_tag(article.image, class:"article-image") %>
    </div>
    <% end %>
  </div>
</section>

